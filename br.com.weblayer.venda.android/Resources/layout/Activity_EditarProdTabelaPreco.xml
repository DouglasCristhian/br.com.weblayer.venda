<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
    android:id="@+id/lblIdProdutoTbl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Produto"/>
  <Spinner
    android:id="@+id/spinnerIdProdutoTbl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
  <TextView
    android:id="@+id/lblIdTabPreco"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tabela de Preço"/>
  <Spinner
    android:id="@+id/spinnerIdTabPreco"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
  <TextView
    android:id="@+id/lblValorTabProd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Valor"/>
  <EditText
    android:id="@+id/txtValorTabProd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>
