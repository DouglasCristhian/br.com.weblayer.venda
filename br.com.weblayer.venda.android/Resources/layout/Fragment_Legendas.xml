<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:minHeight="150dp"
    android:weightSum="1">

  <TextView
    android:id="@+id/txtTitulo"
    android:text="Status do Pedido:"
    android:layout_marginTop="10dip"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_gravity="start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"/>

  <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="15dip"
        android:background="#D6D7D7" />

  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img1"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bolinha_cinza" />
    <TextView
        android:id="@+id/txtLegenda1"
        android:text="  Em Aberto/Finalizado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img2"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bolinha_azul" />
    <TextView
        android:id="@+id/txtLegenda2"
        android:text="  Sincronizado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img3"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bolinha_vermelha" />
    <TextView
        android:id="@+id/txtLegenda3"
        android:text="  Recusado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bolinha_verde" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Realizado/Incluído"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  <Button
        android:id="@+id/btnEntendi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dip"
        android:text="Entendi!" />
</LinearLayout>