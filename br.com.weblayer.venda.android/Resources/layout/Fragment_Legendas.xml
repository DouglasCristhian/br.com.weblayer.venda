<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:minWidth="250dp"
    android:minHeight="200dp">

  <TextView
    android:id="@+id/txtBase"
    android:text="Legendas:"
    android:layout_marginBottom="10dip"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"/>

  <LinearLayout
      android:layout_marginTop="18dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_horizontal">

        <ImageView
          android:id="@+id/img1"
          android:layout_marginLeft="10dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:background="@drawable/legenda1"/>

        <TextView
          android:id="@+id/txtLegenda1"
          android:text="  Em Aberto/Finalizado"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"/>

    </LinearLayout>


  <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
      android:id="@+id/img2"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:background="@drawable/legenda2"/>

    <TextView
      android:id="@+id/txtLegenda2"
      android:text="  Sincronizado"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"/>

  </LinearLayout>


  <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
      android:id="@+id/img3"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:background="@drawable/legenda3"/>

    <TextView
      android:id="@+id/txtLegenda3"
      android:text="  Recusado"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"/>

  </LinearLayout>


  <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
      android:id="@+id/img4"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:background="@drawable/legenda4"/>

    <TextView
      android:id="@+id/txtLegenda4"
      android:text="  Realizado/Incluído"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"/>

  </LinearLayout>
  
</LinearLayout>